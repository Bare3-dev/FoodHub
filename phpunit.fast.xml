<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="true"
         cacheDirectory=".phpunit.cache"
         executionOrder="random"
         failOnWarning="false"
         failOnRisky="false"
>
    <testsuites>
        <testsuite name="Fast">
            <file>tests/Feature/Api/AuthApiTest.php</file>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="DB_CONNECTION" value="testing"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="BROADCAST_CONNECTION" value="log"/>
        <!-- Disable heavy features for fast testing -->
        <env name="RATE_LIMITING_ENABLED_IN_TESTS" value="false"/>
        <env name="SECURITY_LOGGING_ENABLED" value="false"/>
        <env name="CORS_ENABLED_IN_TESTS" value="false"/>
        <env name="HTTPS_ENFORCEMENT_ENABLED" value="false"/>
        <env name="INPUT_SANITIZATION_ENABLED" value="false"/>
        <!-- Use in-memory database for speed -->
        <env name="DB_DATABASE" value="laravel_app_test"/>
    </php>
</phpunit>